            if (showRegistrationForm) {
                return (
                    <div className="bg-gray-50 py-16 px-4">
                        <div className="max-w-4xl mx-auto">
                            <div className="bg-white rounded-2xl shadow-xl p-8">
                                <div className="mb-8">
                                    <button
                                        onClick={() => setShowRegistrationForm(false)}
                                        className="text-blue-600 hover:text-blue-800 font-semibold mb-4 flex items-center"
                                    >
                                        <svg className="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M15 19l-7-7 7-7" />
                                        </svg>
                                        Back to Pricing
                                    </button>
                                    <h2 className="text-3xl font-bold text-gray-900 mb-2">
                                        Lawyer Registration Form
                                    </h2>
                                    <p className="text-gray-600">
                                        Selected: <span className="font-semibold text-blue-600">
                                            {advertisingTiers.find(t => t.id === selectedTier)?.name} - 
                                            ${advertisingTiers.find(t => t.id === selectedTier)?.price}/month
                                        </span>
                                    </p>
                                </div>

                                <form onSubmit={handleSubmitRegistration} className="space-y-6">
