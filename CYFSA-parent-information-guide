                { city: 'Hamilton', phone: '1-866-682-7867', address: '119 King St W' },
                { city: 'London', phone: '1-800-265-0451', address: '251 Dundas St' },
                { city: 'Windsor', phone: '1-800-265-0451', address: '500 Riverside Dr W' }
