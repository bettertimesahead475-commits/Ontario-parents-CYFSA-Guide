                    <LegalResources />
                </div>
            );
        }

        // Legal Resources Component
        function LegalResources() {
            const [showRegistrationForm, setShowRegistrationForm] = useState(false);
            const [selectedTier, setSelectedTier] = useState(null);
            const [formData, setFormData] = useState({
                firmName: '',
                lawyerName: '',
                email: '',
                phone: '',
                address: '',
                city: '',
                practiceNumber: '',
                lawSociety: 'Law Society of Ontario',
                specialties: [],
                yearsExperience: '',
                consultationFee: '',
                languages: '',
                website: '',
                bio: ''
            });

            const advertisingTiers = [
                {
                    id: 'basic',
                    name: 'Basic Listing',
                    price: 99,
                    period: '/month',
                    features: [
                        'Firm name',
