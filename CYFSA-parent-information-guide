        // Pricing Page
        function PricingPage({ setPage }) {
            const [selectedPlan, setSelectedPlan] = useState(null);
            const [formData, setFormData] = useState({ name: '', email: '', phone: '' });
            const [showInstructions, setShowInstructions] = useState(false);
            const [reference, setReference] = useState('');

            const plans = [
                {
                    id: 'single',
                    name: 'Single Review',
                    price: 49.99,
                    description: 'One-time AI analysis of your case',
                    features: [
                        'AI-powered document analysis',
                        'Detailed PDF report',
                        'Timeline extraction',
                        'Violation identification',
                        'Actionable recommendations'
                    ]
                },
                {
                    id: 'package',
                    name: 'Case Package',
                    price: 199.99,
                    popular: true,
                    description: 'Best value for active cases',
                    features: [
                        '5 compliance review credits',
                        'All document builders',
                        'Priority email support',
                        'Case binder storage',
                        'Valid for 6 months'
                    ]
                },
                {
                    id: 'monthly',
                    name: 'Monthly Unlimited',
                    price: 99.99,
                    description: 'Unlimited reviews per month',
                    features: [
                        'Unlimited compliance reviews',
                        'All document builders',
                        'Priority support',
                        'Community access',
                        'Cancel anytime'
                    ]
                }
            ];

            const handleSubmit = (e) => {
                e.preventDefault();
                const ref = 'REF-' + Math.random().toString(36).substr(2, 8).toUpperCase();
                setReference(ref);
                setShowInstructions(true);
            };

            if (showInstructions) {
                return (
                    <div className="min-h-screen bg-gradient-to-b from-blue-50 to-white py-12 px-4">
                        <div className="max-w-2xl mx-auto">
                            <div className="bg-white rounded-2xl shadow-xl p-8">
                                <div className="text-center mb-8">
                                    <CheckCircle className="w-16 h-16 text-green-600 mx-auto mb-4" />
                                    <h2 className="text-3xl font-bold text-gray-900 mb-2">
                                        Payment Request Created
                                    </h2>
                                    <p className="text-gray-600">
                                        Follow the instructions below to complete your payment
                                    </p>
                                </div>

                                <div className="bg-blue-50 border-2 border-blue-200 rounded-xl p-6 mb-6">
                                    <h3 className="text-lg font-semibold text-gray-900 mb-4">
                                        E-Transfer Instructions
                                    </h3>
                                    
                                    <div className="space-y-4">
                                        <div className="flex justify-between py-2 border-b border-blue-200">
                                            <span className="font-medium text-gray-700">Send To:</span>
                                            <span className="font-semibold text-gray-900">mr.pelkie@gmail.com</span>
                                        </div>
                                        
                                        <div className="flex justify-between py-2 border-b border-blue-200">
                                            <span className="font-medium text-gray-700">Amount:</span>
                                            <span className="text-2xl font-bold text-gray-900">
                                                ${plans.find(p => p.id === selectedPlan)?.price}
                                            </span>
                                        </div>
                                        
                                        <div className="flex justify-between py-2 border-b border-blue-200">
                                            <span className="font-medium text-gray-700">Reference:</span>
                                            <span className="font-mono font-semibold bg-yellow-100 px-3 py-1 rounded text-gray-900">
                                                {reference}
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div className="bg-gray-50 rounded-xl p-6 mb-6">
                                    <h3 className="text-lg font-semibold text-gray-900 mb-4">Next Steps</h3>
                                    <ol className="space-y-3">
                                        <li className="flex items-start">
                                            <span className="flex-shrink-0 w-6 h-6 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-semibold mr-3">1</span>
                                            <span className="text-gray-700">Send e-transfer to mr.pelkie@gmail.com</span>
                                        </li>
                                        <li className="flex items-start">
                                            <span className="flex-shrink-0 w-6 h-6 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-semibold mr-3">2</span>
                                            <span className="text-gray-700">Include reference: {reference}</span>
                                        </li>
                                        <li className="flex items-start">
                                            <span className="flex-shrink-0 w-6 h-6 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-semibold mr-3">3</span>
                                            <span className="text-gray-700">Email confirmation will be sent within 24 hours</span>
                                        </li>
                                        <li className="flex items-start">
                                            <span className="flex-shrink-0 w-6 h-6 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-semibold mr-3">4</span>
                                            <span className="text-gray-700">Access will be granted upon verification</span>
                                        </li>
                                    </ol>
                                </div>

                                <div className="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
                                    <div className="flex items-start">
                                        <AlertCircle className="w-5 h-5 text-yellow-600 mr-3 mt-0.5 flex-shrink-0" />
                                        <p className="text-sm text-yellow-800">
                                            <strong>Important:</strong> Please include the reference number in your e-transfer message. 
                                            This helps us verify your payment quickly.
                                        </p>
                                    </div>
                                </div>

                                <button
                                    onClick={() => setShowInstructions(false)}
                                    className="w-full bg-gray-200 text-gray-900 py-3 rounded-lg font-semibold hover:bg-gray-300"
                                >
                                    Start New Payment
                                </button>
                            </div>
                        </div>
                    </div>
                );
            }

            return (
                <div className="min-h-screen bg-gradient-to-b from-blue-50 to-white py-12 px-4">
                    <div className="max-w-7xl mx-auto">
                        <div className="text-center mb-12">
                            <h1 className="text-4xl font-bold text-gray-900 mb-4">Choose Your Plan</h1>
                            <p className="text-xl text-gray-600">
                                Get powerful AI-driven analysis to strengthen your case
                            </p>
                        </div>

                        {/* Pricing Cards */}
                        <div className="grid md:grid-cols-3 gap-8 mb-12">
                            {plans.map(plan => (
                                <div
                                    key={plan.id}
                                    className={`relative bg-white rounded-2xl shadow-xl overflow-hidden transition-all ${
                                        selectedPlan === plan.id ? 'ring-4 ring-blue-500 scale-105' : ''
                                    } ${plan.popular ? 'border-4 border-blue-500' : 'border border-gray-200'}`}
                                >
                                    {plan.popular && (
                                        <div className="absolute top-0 right-0 bg-blue-500 text-white px-4 py-1 text-sm font-semibold rounded-bl-lg">
                                            BEST VALUE
                                        </div>
                                    )}
                                    
                                    <div className="p-8">
                                        <h3 className="text-2xl font-bold text-gray-900 mb-2">{plan.name}</h3>
                                        <p className="text-gray-600 mb-6">{plan.description}</p>
                                        
                                        <div className="mb-6">
                                            <span className="text-5xl font-bold text-gray-900">${plan.price}</span>
                                            {plan.id === 'monthly' && <span className="text-gray-600 ml-2">/month</span>}
                                        </div>

                                        <ul className="space-y-3 mb-8">
                                            {plan.features.map((feature, idx) => (
                                                <li key={idx} className="flex items-start">
                                                    <CheckCircle className="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" />
                                                    <span className="text-gray-700">{feature}</span>
                                                </li>
                                            ))}
                                        </ul>

                                        <button
                                            onClick={() => setSelectedPlan(plan.id)}
                                            className={`w-full py-3 rounded-lg font-semibold transition-all ${
                                                selectedPlan === plan.id
                                                    ? 'bg-blue-600 text-white shadow-lg'
                                                    : 'bg-gray-100 text-gray-900 hover:bg-gray-200'
                                            }`}
                                        >
                                            {selectedPlan === plan.id ? 'Selected' : 'Select Plan'}
                                        </button>
                                    </div>
                                </div>
                            ))}
                        </div>

                        {/* Contact Form */}
                        {selectedPlan && (
                            <div className="max-w-2xl mx-auto bg-white rounded-2xl shadow-xl p-8">
                                <h2 className="text-2xl font-bold text-gray-900 mb-6">
                                    Complete Your Purchase
                                </h2>

                                <form onSubmit={handleSubmit} className="space-y-6">
                                    <div>
                                        <label className="flex items-center text-sm font-medium text-gray-700 mb-2">
